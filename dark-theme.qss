/* Normal buttons, with no rounded corners, dark background (darker when enabled), and colored borders. */

QPushButton {
    border-style: solid;
    border-width: 1px;
    padding-top: 5px;
    padding-bottom: 4px;
    padding-left: 10px;
    padding-right: 10px;
    border-color: #101010;
    color: #BBBBBB;
    background-color: #262626;
}
QPushButton:hover {
    border-color: #E67E22;
    color: #FAFAFA;
    background-color: #181818;
}
QPushButton:pressed {
    border-color: #E67E22;
    color: #FAFAFA;
    background-color: #101010;
}
QPushButton:checked {
    border-color: #E67E22;
    background-color: #101010;
}
QPushButton:disabled {
    color: #808086;
    background-color: #262626;
}

/* Normal checkboxes */
QCheckBox::indicator:unchecked {
    width: 18px;
    height: 18px;
    border-style: solid;
    border-width: 1px;
    border-color: #BBBBBB;
}

QCheckBox::indicator:hover {
    width: 18px;
    height: 18px;
    border-style: solid;
    border-width: 1px;
    border-color: #E67E22;
}

QCheckBox::indicator:checked {
    width: 18px;
    height: 18px;
    border-style: solid;
    border-width: 1px;
    border-color: #3ba4dc;
    background-color: #264d62;
    image:url({assets_path}/icons/checkbox_check.png);
}

